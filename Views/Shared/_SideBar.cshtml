
@{
    List<Object> menuItems = new List<Object>();

    menuItems.Add(new
    {
        text = "Dashboard",
        url = "/"
        
    });


    menuItems.Add(new
    {
        text = "Categories",
        url = "/Categories"
    });

    menuItems.Add(new
    {
        text = "Transactions",
        url = "/Transaction"
    });
}




<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px">
    <e-content-template>

        <div class="logo-wrapper">
            <div class="app-logo">
                <img src="~/logo.png" />
            </div>
            <div class="w-100">
            <i id ="sidebar-toggler " class="fa-solid fa-angle-left"></i>
            </div>
        </div>

        <div class="profile-wrapper">
            <img class="profile-pic" src ="~/profile.png" />
            <div class="titles d-flex flex-column ps-3">
                <h6 class="mb-0">Wallet App</h6>
                <span class="text-muted">Rishav Kumar</span>
            </div>
        </div>


        <ejs-menu id="menu" items="menuItems" orientation="Vertical"></ejs-menu>
    </e-content-template>

</ejs-sidebar>


<script>
    document.addEventListener('DOMContentLoaded',function(){
        dockBar = document.getElementById('sidebar').ej2_instances[0];
        document.getElementById('sidebar-toggler').onClick = function(){
            dockBar.toggle();
        };
    });
</script>